const promptMessage = {
					model:"gpt-3.5-turbo",
					messages:[
						{role: "user", content:a },
					],
					max_tokens: 3000,
					temperature: 1
				  };
				
                axios.post('https://api.openai.com/v1/chat/completions', promptMessage, {
				  headers: {
					'Content-Type': 'application/json',
					'Authorization': `Bearer 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`
				  }
				})
				.then(response => {
					let gen=response.data.choices[0].message.content
					console.log(gen);
					editor.edit((editBuilder) => {
						editBuilder.insert(new vscode.Position(editor.document.lineCount+2, 0), gen);
					}).then(() => {
						vscode.window.showInformationMessage('Texte inséré avec succès !');
					});
				})
				.catch(error => {
				  console.error('Erreur lors de la requête à l\'API ChatGPT:', error.message);
				});
